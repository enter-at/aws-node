{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "dist",
        "sourceMap": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "node_modules/@types",
            "jest"
        ]
    },
    "include": [
        "src",
        "test",
    ],
    "exclude": [
        "node_modules"
    ]
}
