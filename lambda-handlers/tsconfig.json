{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "ES2020",
        "sourceMap": false,
        "strict": true,
        "moduleResolution": "node",
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
